@model IEnumerable<solicita_web_net.Models.sol_produto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
        <h4 class="page-header">Produtos</h4>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 col-md-6">
        <div class="panel panel-default ">
            
            <div class="panel-body">
                <p>
                    @Html.ActionLink("Novo produto", "Create")
                </p>
                <table class="dataTables_wrapper form-inline dt-bootstrap no-footer" >
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.sol_produto_descricao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.sol_produto_data_cadastro)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.sol_produto_descricao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.sol_produto_data_cadastro)
                            </td>
                            <td>
                                @Html.ActionLink("Alterar", "Edit", new { id = item.sol_produto_id }) |
                                @Html.ActionLink("Detalhes", "Details", new { id = item.sol_produto_id }) |
                                @Html.ActionLink("Excluir", "Delete", new { id = item.sol_produto_id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
        </div>
</div>
