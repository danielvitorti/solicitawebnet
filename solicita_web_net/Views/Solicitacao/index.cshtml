@model IEnumerable<solicita_web_net.Models.sol_solicitacao>


@{
    ViewBag.Title = "Solicitações";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Solicitações</h2>

<p>
    @Html.ActionLink("Nova solicitação", "cadastrar")
</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        
        <div class="form-group">
            <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6">
                <label>Status</label>
                @Html.DropDownList("sol_status_id", null, htmlAttributes: new { @class = "form-control" })


            </div>


            <div class="col-md-2 col-lg-2 col-xs-2 col-sm-1">
                <br />
                <input type="submit" value="Buscar" class="btn btn-succes" />
            </div>
        </div>

    </div>
    
    <br />
    <br />
}
<table class="table table-responsive table-striped">
    <tr>
        <th>
            Número
        </th>
        <th>
            Descrição
        </th>
        
        <th>
           Status
        </th>

        <th> # </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.sol_solicitacao_id)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.sol_solicitacao1)
        </td>


        <td>
            @Html.DisplayFor(modelItem => item.sol_status.sol_status_descricao)
        </td>

        <td>
            @Html.ActionLink("Alterar", "alterar", new { id=item.sol_solicitacao_id }) |
            @Html.ActionLink("Detalhes", "detalhes", new { id=item.sol_solicitacao_id }) |
            @Html.ActionLink("Excluir", "excluir", new { id=item.sol_solicitacao_id })
        </td>
    </tr>
}

</table>
